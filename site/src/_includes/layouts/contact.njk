<!-- Contact Section -->
<section class="bg-white">
  <div class="max-w-6xl mx-auto px-4 md:px-8 py-12">
    <div class="flex flex-col md:flex-row gap-12">
      <!-- Left Side - Contact Info -->
      <div class="md:w-2/5">
        <h2 class="text-4xl font-light mb-8 text-mascp-dark">CONTACT US</h2>
        
        <div class="mb-8">
          <p class="font-bold text-lg mb-4">Madison Arcatao Sister City Project</p>
          <p class="text-base text-mascp-dark leading-relaxed mb-2">P.O. Box 132</p>
          <p class="text-base text-mascp-dark leading-relaxed mb-6">Madison, WI 53701</p>
          <p class="text-base text-mascp-dark mb-8">info[at]mascp.org</p>
        </div>

        <a href="/donate/" class="inline-block bg-mascp-teal text-white px-8 py-4 text-lg font-medium hover:opacity-90 transition">
          Donate Now
        </a>
      </div>

      <!-- Right Side - Contact Form -->
      <div class="md:w-3/5">
        <form class="space-y-6">
          <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <input type="text" placeholder="Name *" required class="w-full px-4 py-3 border border-gray-400 text-base">
            <input type="email" placeholder="Email *" required class="w-full px-4 py-3 border border-gray-400 text-base">
          </div>
          
          <input type="tel" placeholder="Phone" class="w-full px-4 py-3 border border-gray-400 text-base">
          
          <input type="text" placeholder="Address" class="w-full px-4 py-3 border border-gray-400 text-base">
          
          <input type="text" placeholder="Subject" class="w-full px-4 py-3 border border-gray-400 text-base">
          
          <textarea placeholder="Message" rows="6" class="w-full px-4 py-3 border border-gray-400 text-base resize-none"></textarea>
          
          <button type="submit" class="w-full bg-mascp-dark text-white px-4 py-3 text-lg font-medium hover:opacity-90 transition">
            Send
          </button>
        </form>
      </div>
    </div>
  </div>
</section>

