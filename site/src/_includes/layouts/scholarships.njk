---
layout: layouts/base.njk
---

{% if heroImage %}
<section class="hero-section min-h-[350px] md:min-h-[450px]" style="background-image: url('{{ heroImage }}');">
</section>
{% else %}
<div class="bg-mascp-dark py-8">
  <h1 class="text-3xl md:text-4xl font-heading text-center text-white">{{ title }}</h1>
</div>
{% endif %}

<!-- Main Content with Images Grid -->
<section class="bg-white">
  <div class="max-w-6xl mx-auto px-4 md:px-8 pb-12">
    <div class="flex flex-col md:flex-row gap-8">
      <!-- Text Content - left side (wider) -->
      <div class="md:w-3/5">
        <article class="prose text-base md:text-lg leading-relaxed text-mascp-dark">
          {{ content | safe }}
        </article>
      </div>

      <!-- Images Column - right side: narrow images stacked and aligned right -->
      <div class="md:w-2/5">
        <div class="flex flex-col gap-6">
          <img src="/assets/images/scholarships/e30e9f_103f07885fe04214888185b65ce455eb_mv2.jpg" alt="Scholarship ceremony" style="width:68%;max-width:420px;height:360px;margin-left:auto;object-fit:cover;object-position:top;">
          <img src="/assets/images/scholarships/e30e9f_689bcd33366a4e0f92a8b76940ff9866_mv2.jpg" alt="Students" style="width:68%;max-width:420px;height:240px;margin-left:auto;object-fit:cover;">
        </div>
      </div>
    </div>
  </div>
</section>
